gitea:
  gitea:
    admin:
      existingSecret: gitea-admin
      email: gitea@local.domain
  ingress:
    enabled: true
    annotations:
      kubernetes.io/ingress.class: nginx
      cert-manager.io/cluster-issuer: "letsencrypt"
    hosts:
      - host: git.k8s.zzamzam.dev
        paths:
          - path: /
            pathType: Prefix
    tls:
    - secretName: letsencrypt
      hosts:
        - git.k8s.zzamzam.dev
